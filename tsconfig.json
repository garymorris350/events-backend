{
  "compilerOptions": {
    /* Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Target/Modules (ESM on Node) */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    /* Quality of life */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Extra safety */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
