{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src", "src/global.d.ts", "src/types/**/*.d.ts"]
}
