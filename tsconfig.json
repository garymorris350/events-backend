{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022"],        // <— fixes console, process
    "types": ["node"],        // <— ensures Node globals
    "typeRoots": ["./node_modules/@types"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
