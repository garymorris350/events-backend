{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022", "DOM"],   // add DOM (optionally also "DOM.Iterable")

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
